{
  "compilerOptions": {
    "module": "CommonJs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "removeComments": true,
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": false,
    "outDir": "dist"
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "typeRoots" : ["./node_modules/@types"]
}